@model IEnumerable<Food>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<h1>Index</h1>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic Table</h4>
                        <p class="card-description">
                            Add class <code>.table</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>№</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var food in Model)
                                    {
                                        <tr>
                                            <td>@count</td>
                                            <td><img src="~/image/@food.Image" /></td>
                                            <td>@food.Name</td>
                                            <td><button type="button" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@food.Id"></button></td>
                                            <td><button type="button" class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@food.Id"></button></td>
                                        </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
